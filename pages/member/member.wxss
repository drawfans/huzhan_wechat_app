.datadiff .action {
    top: 42px;
    padding: 10px 0;
    position: fixed;
    right: 5px;
    width: 100%;
    text-align: center;
}

.datadiff img {
    border: #e5e5e5 1px solid;
    border-radius: 2px;
    box-shadow: 0 2px 3px rgba(0,0,0,.1);
